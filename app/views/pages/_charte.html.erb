<div id="charte-banner">
  <div class="charte-banner-title">
    <hr class="charte-line" style="width: 10%;">
    <h3>Nos Valeurs</h3>
    <hr class="charte-line">
  </div>
  <div class="charte-main">
    <div class="row">
      <div class="col m2 s8 offset-s2">
        <div class="charte-bubble">
          <div class="charte-bubble-title">
            <%= image_tag 'quality.png', id:"quality-logo" %>
            <h6>Qualité et Transparence</h6>
          </div>
        </div>
      </div>
      <div class="col m2 s8 offset-s2">
        <div class="charte-bubble">
          <div class="charte-bubble-title">
            <%= image_tag 'relation.png', id:"relation-logo" %>
            <h6>Partenariat avec les Producteurs</h6>
          </div>
        </div>
      </div>
      <div class="col m2 s8 offset-s2">
        <div class="charte-bubble">
          <div class="charte-bubble-title">
            <%= image_tag 'environment.png', id:"environment-logo" %>
            <h6>Préservation de l'environnement</h6>
          </div>
        </div>
      </div>
      <div class="col m5 s8 offset-s2 offset-m1">
        <div class="charte-download-wrapper">
          <h5 class="center">En savoir plus sur notre engagement?</h5>
          <%= link_to 'Télécharger la Charte', download_charte_url, class: "waves-effect waves-light btn download-button"%>
        </div>
      </div>
    </div>
  </div>
</div>