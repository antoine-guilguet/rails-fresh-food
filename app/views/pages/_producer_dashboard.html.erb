<div class="row">
  <div class="dashboard-container">
    <div class="dashboard-title-wrapper">
      <h4>Vos Producteurs</h4>
      <%= link_to 'Rechercher un Producteur', producers_path, class: "btn" %>
    </div>
  </div>

  <div class="dashboard-container">
    <% @producers.each do |producer | %>
        <div class="row">
          <div class="col l3 s6">
            <div class="center dashboard-producer-name">
              <h6><%= link_to producer.name, producer_path(producer) %></h6>
              <%= image_tag 'user.png', class: "picto-big" %>
              <p><%= producer.render_full_name %></p>
            </div>
          </div>
          <div class="col l2 s6">
            <div class="dashboard-status-wrapper" style="justify-content: center;">
              <% if producer.purchase_lists.empty? %>
                  <div class="dashboard-producer-status inactif">
                    Inactif
                  </div>
              <% else %>
                  <div class="dashboard-producer-status actif">
                    Actif
                  </div>
              <% end %>
            </div>
          </div>
          <div class="col l1 s12">
            <div class="dashboard-status-wrapper">
              <%= link_to new_producer_purchase_list_path(producer) do %>
                  <i class="material-icons dashboard-add-list-btn tooltipped" data-position="top" data-delay="40" data-tooltip="CrÃ©er une liste d'achat">add_box</i>
              <% end %>
            </div>
          </div>
          <div class="col l6 s12">
            <div class="dashboard-status-wrapper">
              <% if producer.purchase_lists.empty? %>
                  <p>Vous n'avez pas encore de liste d'achat avec ce producteur</p>
              <% else %>
                  <% producer.purchase_lists.each do |purchase_list| %>
                      <%= link_to producer_purchase_list_path(producer, purchase_list), class:"purchase-list-button" do %>
                          <i class="material-icons">shopping_cart</i>
                          <p class="purchase-list-button-title"><%= purchase_list.name %></p>
                      <% end %>
                  <% end %>
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>